{% extends '@GbenitezAttribute/base.html.twig' %}

{% block title %}Crear Nuevo Attribute{% endblock %}

{% block page_header %}Crear Nuevo Attribute{% endblock %}

{% block content %}
<div class="row">
    <div class="col-md-8">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        
        <div class="mb-3">
            {{ form_label(form.name, null, {'class': 'form-label'}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>
        
        <div class="mb-3">
            {{ form_label(form.presentation, null, {'class': 'form-label'}) }}
            {{ form_widget(form.presentation, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.presentation) }}
        </div>
        
        <div class="mb-3">
            {{ form_label(form.type, null, {'class': 'form-label'}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type) }}
        </div>
        
        <div class="mb-3 form-check">
            {{ form_widget(form.active, {'attr': {'class': 'form-check-input'}}) }}
            {{ form_label(form.active, null, {'class': 'form-check-label'}) }}
            {{ form_errors(form.active) }}
        </div>
        
        <div class="mb-3">
            <button type="submit" class="btn btn-success">Crear Attribute</button>
            <a href="{{ path('gbenitez_attribute_list') }}" class="btn btn-secondary">Cancelar</a>
        </div>
        
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
