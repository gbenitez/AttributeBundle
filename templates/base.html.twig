<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('bundles/attribute/css/lumen_bootstrap.min.css') }}" rel="stylesheet">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block body %}
    {{ include('@Attribute/header.html.twig') }}
    {% block main_content %}
        <div class="container {% block container_class %}margin-bottom-25 margin-top-35{% endblock %}">

            {% block page_content %}
                <div class="pull-right">
                    {% block page_header_right %}{% endblock %}
                    {% block page_actions %}{% endblock %}
                </div>

                {{ include('@Attribute/flashes.html.twig') }}

                {% block content %}{% endblock %}
            {% endblock page_content %}

        </div>
    {% endblock %}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('bundles/attribute/js/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/attribute/js/bootstrap.min.js') }}"></script>

{% endblock %}
</body>
</html>
