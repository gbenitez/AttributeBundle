{% if configuration.multiple is defined and configuration.multiple %}
    {%- block multiple -%}
        {% for val in value %}
            {{- configuration.property is defined ? attribute(value, configuration.property) : val -}}
            {{- not loop.last ? ', ' -}}
        {% endfor %}
    {%- endblock -%}
{% else %}
    {%- block single -%}
        {{ configuration.property is defined ? attribute(value, configuration.property) : value }}
    {%- endblock -%}
{% endif %}

