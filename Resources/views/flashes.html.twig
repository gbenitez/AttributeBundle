{% if app.request.hasPreviousSession and app.session.flashBag.peekAll|length > 0 %}
    {% set type_alias = {
        error: 'danger'
    } %}
    <div class="row">
        <div class="col-sm-12">
            {% for type, messages in app.session.flashbag %}
                {% for message in messages %}
                    <div class="alert alert-{{ type_alias[type]|default(type) }}{# alert-dismissible#}" role="alert">
                        {#<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>#}
                        {{ message|raw }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
{% endif %}